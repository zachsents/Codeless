{
    "name": "functions",
    "version": "1.0.0",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "firestore": "firebase emulators:start --only firestore --import=./.firebase-local --export-on-exit",
        "dev": "firebase emulators:start --only functions,firestore --import=./.firebase-local --export-on-exit",
        "debugdev": "set DEBUG=\"firebase-functions:*\" && firebase emulators:start --only functions,firestore --import=./.firebase-local --export-on-exit",
        "serve": "firebase emulators:start --only functions",
        "shell": "firebase functions:shell --port 5002",
        "logs": "firebase functions:log",
        "deploy": "node ./buildDeps.js && firebase deploy --only functions && node ./cleanupBuild.js"
    },
    "engines": {
        "node": "18"
    },
    "main": "index.js",
    "dependencies": {
        "@minus/gee3": "workspace:*",
        "@minus/server-nodes": "workspace:*",
        "@minus/server-sdk": "workspace:*",
        "dotenv": "^16.0.3",
        "firebase-admin": "^11.3.0",
        "firebase-admin-callable-functions": "workspace:*",
        "firebase-functions": "^4.2.1",
        "node-fetch": "^3.3.0"
    },
    "devDependencies": {
        "firebase-functions-test": "^0.2.0"
    },
    "private": true,
    "type": "module"
}
